# Production Environment Configuration Example
# Copy to .env.production and fill in secrets

# Database (PostgreSQL)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://bazi_user:secure_password@localhost:5432/bazi_prod?schema=public"

# Redis (Session & Cache) - REQUIRED for Production
# Format: redis://:PASSWORD@HOST:PORT
REDIS_URL="redis://:secure_redis_password@localhost:6379"

# Security
# Generate a random 32+ char string: `openssl rand -hex 32`
SESSION_TOKEN_SECRET="change_this_to_a_long_random_secure_string_minimum_32_chars"

# CORS & URLs
# The URL where the frontend is hosted
FRONTEND_URL="https://bazi-master.com"
# The URL where this backend is hosted
BACKEND_BASE_URL="https://api.bazi-master.com"

# Server Port
PORT=4000

# Rate Limiting
# 15 minutes in milliseconds
RATE_LIMIT_WINDOW_MS=900000
# Max requests per window per IP
RATE_LIMIT_MAX=100

# Trust Proxy (for running behind Nginx/Load Balancers)
# Set to 'loopback' or the IP of your proxy
TRUST_PROXY="loopback"

# AI Providers (Optional - at least one recommended)
OPENAI_API_KEY="sk-..."
ANTHROPIC_API_KEY="sk-..."
SILICONFLOW_API_KEY="sk-..."
# DEEPSEEK_API_KEY="..."

# Admin Emails (Comma separated)
ADMIN_EMAILS="admin@example.com,monitor@example.com"
